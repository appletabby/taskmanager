<h1>編輯任務</h1>

<%= form_for(@task) do |f| %>
<%= f.label :content, "任務內容" %>
<%= f.text_area :content %> <br />

<%= f.label :priority, "優先順序" %>
<%= f.text_field :priority %> <br />

<%= f.label :status, "目前狀態" %>
<%= f.text_field :status %> <br />

<%= f.label :started_at, "開始時間" %>
<%= f.text_field :started_at %> <br />

<%= f.label :ended_at, "結束時間" %>
<%= f.text_field :ended_at %> <br />

<%= f.submit %>

<% end %>

<br />
<%= link_to "回任務列表", tasks_path %>