<%= form_for(task) do |f| %>
<%= f.label :content, t('views.task_content') %>
<%= f.text_area :content %> <br />

<%= f.label :priority, t('views.priority') %>
<%= f.text_field :priority %>（<%= t('views.priority_content') %>）<br />

<%= f.label :status, t('views.status') %>
<%= f.text_field :status %>（<%= t('views.status_content') %>）<br />

<%= f.label :started_at, t('views.started_time') %>
<%= f.text_field :started_at %> <br />

<%= f.label :ended_at, t('views.ended_time') %>
<%= f.text_field :ended_at %> <br />

<%= f.submit %>

<% end %>